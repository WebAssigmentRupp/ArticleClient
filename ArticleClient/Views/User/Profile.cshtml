<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <h4 class="m-t-0 m-b-30 header-title"><b>អំពីយើង</b></h4>
                    <div class="row">
                        <div class="col-lg-12">

                            <form class="form-horizontal group-border-dashed" action="#">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">ឈ្មោះគណនី</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" required placeholder="បញ្ចូលឈ្មោះគណនី" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">អុីម៉ែល</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" required parsley-type="email" placeholder="បញ្ចូលអុីម៉ែល" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">ឈ្មោះ</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" required parsley-type="email" placeholder="បញ្ចលឈ្មោះ" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">ភេទ</label>
                                    <div class="col-sm-3">
                                        <select name="" id="" class="form-control">
                                            <option value="">ជ្រើសរើស</option>
                                            <option value="male">ប្រុស</option>
                                            <option value="female">ស្រី</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">លេខសំងាត់</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" required parsley-type="email" placeholder="បញ្ចូលលេងសំងាត់" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">ផ្តៀងផ្តាត់លេខសំខាត់</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" required parsley-type="email" placeholder="បញ្ចូលផ្តៀងផ្តាត់លេខសំខាត់" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">កំនត់មុខងារ</label>
                                    <div class="col-sm-3">
                                        <select name="" id="" class="form-control">
                                            <option value="">ជ្រើសរើស</option>
                                            <option value="male">Admin</option>
                                            <option value="female">Editor</option>
                                        </select>
                                    </div>

                                </div>

                                <div class="col-sm-12" style="padding-right:80px">
                                    <input type="submit" value="រក្សារទុក" class=" btn btn-md btn-primary pull-right">
                                </div>


                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


